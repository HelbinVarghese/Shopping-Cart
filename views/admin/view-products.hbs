<section>
    <div class="container">
        
          <div class="mt-15px">
           <div class="ml-auto"> <a href="/admin/add-product"><button type="button" class="btn btn-success ml-auto">Add Product</button></a></div>
          </div>
        
        <table class="table mt-20">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td> 
      <td>{{this.description}}</td>
      <td><img style="width: 50px; height:50px" src="{{this.image}}" alt=""></td>
    </tr>

    {{/each}}

  </tbody>
</table></div>
</section>